<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for(@user) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :ranking %>
      <%= f.input :genre %>
      <%= f.input :date_of_birth %>
      <%= f.input :licence_number %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
