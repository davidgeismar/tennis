<div class="banner">

  <div class="container">
    <div class="row user_profile">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#profil" aria-controls="profil" role="tab" data-toggle="tab">Profil</a></li>
          <li role="presentation"><a href="#licence" aria-controls="licence" role="tab" data-toggle="tab">Licence</a></li>
          <li role="presentation"><a href="#certif" aria-controls="certif" role="tab" data-toggle="tab">Certif</a></li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="profil">
            <div class="col-xs-5 text-left">
            <h4> Prénom </h4>
            <h4> Nom </h4>
            <h4> email </h4>
            <h4> Telephone</h4>
            <h4> Classement</h4>
            <h4> numéro de licence</h4>
            <h4> Sexe </h4>
            <h4>Date de naissance</h4>
            <h4><%= link_to "Modifier mon profil", edit_user_path, class:"btn btn-warning modifier-profil", id: "modif-prof"  %></h4>
          </div>
          <div class="col-xs-5 text-left">
            <h4><%= @user.first_name %></h4>
            <h4><%= @user.last_name %></h4>
            <h4><%= @user.email %></h4>
            <h4><%= @user.telephone %></h4>
            <h4><%= @user.ranking%></h4>
            <h4><%= @user.licence_number %></h4>
            <h4><%= @user.genre_text %></h4>
            <h4><%= @user.birthdate %></h4>
          </div>
          <div class="col-xs-2">
            <div class="user-picture" style='background-image:url(<%= image_path @user.picture.url(:medium), class:"profile-picture" %>)'>
            </div>
          </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="licence">
            <% if @user.licencepicture_content_type == nil %>
              <%= render "users/edit/player_upload_licence_btn"%>
            <% else %>
              <div id="licence_picture">
                <%= render "users/edit/licence_picture" %>
              </div>
            <% end %>
          </div>
          <div role="tabpanel" class="tab-pane" id="certif">
            <% if @user.licencepicture_content_type == nil %>
              <%= render "users/edit/player_upload_certif_btn"%>
            <% else %>
              <div id="licence_picture">
                <%= render "users/edit/certif_picture" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
 </div>
</div>