<div class="content text-center">
  <div role="tabpanel">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
    <li role="presentation"><a href="#tournois" aria-controls="tournois" role="tab" data-toggle="tab">Mes Tournois</a></li>
    </ul>

     <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="profile">
        <div class="card">
              <h2 class= "text-left"> Prénom : <%= @user.first_name %></h2>
              <h2 class= "text-left"> Nom :<%= @user.last_name %></h2>
              <h2 class= "text-left"> email : <%= @user.email %></h2>
              <h2 class= "text-left"> numéro de juge-arbitre : <%= @user.judge_number %></h2>
              <h2 class= "text-left"> Sexe : <%= @user.genre %></h2>
              <h2 class= "text-left">Date de naissance : <%= @user.date_of_birth %></h2>
              <h2 class= "text-left">Numéro de téléphone : <%= @user.telephone %></h2>



              <%= link_to "Modifier mon profil", edit_user_path  %>
        </div>
      </div>
        <div role="tabpanel" class="tab-pane" id="tournois">
          <div class="container">
            <% current_user.tournaments.each do |tournament| %>
              <div class ="card">
                <% if tournament.accepted? %>
                <h4><%= link_to tournament.name, user_tournament_path(tournament) %></h4>
                <h6><%= tournament.starts_on %>
                </h6>
                <% else %>
                <h4><%= tournament.name %></h4>
                <h6><%= tournament.starts_on %></h6>
                <h6><%= "En attente de validation" %></h6>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
  </div>
</div>



