<div class="banner">
    <div class="container">
      <div class="row user_profile">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="content">
            <div role="tabpanel">
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active tab-title"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                <li role="presentation" class="tab-title"><a href="#tournois" aria-controls="tournois" role="tab" data-toggle="tab">Mes Tournois</a></li>
              </ul>

              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active card" id="profile">
                  <div class="col-xs-5 text-left">
                    <h4> Prénom </h4>
                    <h4> Nom </h4>
                    <h4> email </h4>
                    <h4> numéro de juge-arbitre</h4>
                    <h4> Sexe </h4>
                    <h4>Date de naissance</h4>
                    <h4><%= link_to "Modifier mon profil", edit_user_path, class:"btn btn-warning modifier-profil"  %></h4>
                  </div>
                  <div class="col-xs-5 text-left">
                    <h4><%= @user.first_name %></h4>
                    <h4><%= @user.last_name %></h4>
                    <h4><%= @user.email %></h4>
                    <h4><%= @user.judge_number %></h4>
                    <h4><%= @user.genre %></h4>
                    <h4><%= @user.date_of_birth %></h4>
                  </div>
                  <div class="col-xs-2">
                    <div class="user-picture" style='background-image:url(<%= image_path @user.picture.url(:medium), class:"profile-picture" %>)'>
                    </div>
                  </div>
                </div>

                <div role="tabpanel" class="tab-pane card" id="tournois">
                   <table class="table table-hover">
                      <tr>
                        <th>Compétition</th>
                        <th>Date de début</th>
                        <th>Statut</th>
                      </tr>
                      <%current_user.tournaments.each do |tournament|%>
                          <%if tournament.accepted?%>
                            <tr>
                             <td><h4><%= link_to tournament.name, user_tournament_path(current_user, tournament), class: "link-neutral" %></h4></td>
                             <td><h5><%= tournament.starts_on.strftime("%d/%m/%Y") %></h5></td>
                            </tr>
                          <%else%>
                            <tr>
                             <td><h4><%= tournament.name %></h4></td>
                             <td><h5><%= tournament.starts_on.strftime("%d/%m/%Y") %></h5></td>
                             <td><h5><%= "En attente de validation" %></h5></td>
                            </tr>
                          <% end %>
                      <% end %>
                   </table>

                  </div>
                </div>
              </div>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>
