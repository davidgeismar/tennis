<div class="banner padded">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h2><%= t('.sign_up', default: "Inscription Juge-arbitre") %></h2>
        <p>Juge-arbitre ? Référence tes tournois pour convoquer tes joueurs en 1 clic.</p>

        <%= simple_form_for(@user, url: user_registration_path) do |f| %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :judge, as: :hidden %>
          <%= f.button :submit, t('.sign_up', default: "Sign up"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>