<div class="banner">
  <div class="container padded">
      <div class="col-md-6 bigmarge">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1><%= @tournament.name %></h1>
          </div>
          <div class="panel-body">
            <h4>Du <%=  @tournament.starts_on.strftime("%d/%m/%Y") %> au <%=  @tournament.ends_on.strftime("%d/%m/%Y") %></h4>
            <p>Club Organisateur: <strong><%= @tournament.club_organisateur %></strong></p>
            <p>Numéro d'homologation: <strong><%= @tournament.homologation_number %></strong></p>
            <p>Ville: <strong><%= @tournament.city %></strong></p>
            <p>Code Postal: <strong><%= @tournament.postcode %></strong></p>
            <p>Addresse des installations: <strong><%= @tournament.address %></strong></p>
            <p>Frais d'inscription: <strong><%= @tournament.amount %> €</strong></p>
            <p>IBAN: <strong>

              <% if @tournament.iban? %>
                <% i = @tournament.iban %><%= i[0..2] + "************" %></p>
              <% else %>
              <% end -%>
               </strong>
            <p>BIC: <strong>
              <% if @tournament.bic? %>
                <%= @tournament.bic%>
              <% else %>
              <% end -%>
              </strong>
              </p>
              <%= link_to "Editer", edit_user_tournament_path(current_user, @tournament), class:'btn btn-warning' %>

              <%= link_to "Ajouter une épreuve", new_tournament_competition_path(@tournament), class:'btn btn-success' %>

          </div>
        </div>

      </div>
  </div>
</div>
