<div class="banner">
  <div class="container padded">
      <div class="col-md-6 bigmarge">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1><%= @tournament.name %></h1>
          </div>
          <div class="panel-body">
            <h4>Du <%=  @tournament.starts_on.strftime("%d/%m/%Y") %> au <%=  @tournament.ends_on.strftime("%d/%m/%Y") %></h4>
            <p>Club Organisateur: <strong><%= @tournament.club_organisateur %></strong></p>
            <p>Numéro d'homologation: <strong><%= @tournament.homologation_number %></strong></p>

            <p>Ville: <strong><%= @tournament.city %></strong></p>
            <p>Sexe: <strong><%= @tournament.genre.text %></strong></p>
            <p>Catégorie: <strong><%= @tournament.category %></strong></p>
            <p>Addresse des installations: <strong><%= @tournament.address %></strong></p>
            <p>Frais d'inscription: <strong><%= @tournament.amount %> €</strong></p>

              <%= link_to "Edit", edit_user_tournament_path(current_user, @tournament), class:'btn btn-warning' %>
               <%= link_to "Gérer ce tournoi", tournament_subscriptions_path(@tournament), class:'btn btn-success' %>
          </div>
        </div>

      </div>
  </div>
</div>