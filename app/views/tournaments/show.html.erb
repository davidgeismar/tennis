<% if @tournament.accepted? && current_user == @tournament.user%>
    <%=render 'tournaments/show/details'%>
<%elsif @tournament.accepted? && current_user.judge?%>
    <%= render 'tournaments/show/details_judge'%>
  <%elsif @tournament.accepted? && current_user.judge == false%>
    <%= render 'tournaments/show/subscribe'%>
  <%else%>
    <%=render 'tournaments/show/not_accepted_yet'%>
<%end %>