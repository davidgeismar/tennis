<div class='container padded'>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h3>Convocation</h3>
        <p>Les joueurs qui seront convoqués à l'envoi de ce formulaires sont :</p>
      <ul class="list-unstyled">
        <% @player_names.each do |player_name| %>
          <li><%= player_name %></li>
        <% end %>
      </ul>
      <%= form_tag multiple_create_path(@tournament) do %>
        <%= hidden_field_tag :subscription_ids, nil, value: @subscription_ids_string %>
        <div class="form-group">
          <%= label_tag :date, "Date" %>
          <%= date_field_tag :date, nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :hour, "Heure de la convocation" %>
          <%= time_field_tag :hour, nil, class: 'form-control' %>
        </div>
        <%= submit_tag "Envoyer les convocations", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>