<div class="banner">
  <div class="container padded">
      <div class="col-xs-12 col-md-offset-4 col-md-5 bigmarge">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>  Disponibilit√©s de <%=@disponibility.user.full_name%> pour <%=@disponibility.tournament.name%>  </h3>
          </div>
        <div class="panel-body">
          <%=simple_form_for [@tournament, @disponibility] do |f|%>
            <%= f.error_notification %>

            <%= f.input :monday %>
            <%= f.input :tuesday  %>
            <%= f.input :wednesday  %>
            <%= f.input :thursday  %>
            <%= f.input :friday  %>
            <%= f.input :saturday  %>
            <%= f.input :sunday  %>
            <%= f.input :comment  %>
            <%= f.input :subscription_id, :as => :hidden, :input_html => { :value => params[:subscription_id] } %>
            <%= f.button :submit, "Valider", class: "btn btn-success" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
